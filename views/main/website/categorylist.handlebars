<style>
    .banner-cat{
        border: 1px solid gray;
        border-radius: 20px;
    }
    .banner-content-overlay{
        background-color: rgba(0,0,0,0.3);
        height: 100%;
    }
    .banner-content-overlay:hover{
        background-color: rgba(0,0,0,0.3) !important;
    }
    .banner img, .banner-content-overlay{
        border-radius: 20px;
    }
    .banner-title{
        color: white;
    }
    .banner-subtitle{
        color: rgba(255,255,255,0.7);
    }
    .banner-content-overlay a {
        font-weight: bold;
    }
</style>

<main class="main">
    <div class="mt-4"></div>
    <div class="page-content">
        <div class="container">
            <div class="row justify-content-center">
                {{#each children}}
                <div class="col-md-6 col-lg-4">
                    <div class="banner banner-cat">
                        <a href="/shop/category/{{Slug}}">
                            <img src="/category/api/image/{{_id}}?height=500&width=500&quality=70" alt="Banner">
                        </a>

                        <div class="banner-content banner-content-overlay text-center">
                            <h3 class="banner-title">{{Name}}</h3><!-- End .banner-title -->
                            <h4 class="banner-subtitle">{{product_count}} Products</h4><!-- End .banner-subtitle -->
                            <a href="/shop/category/{{Slug}}" class="banner-link">Shop Now</a>
                        </div><!-- End .banner-content -->
                    </div><!-- End .banner -->
                </div><!-- End .col-md-6 -->
                {{/each}}
            </div><!-- End .row -->
        </div>
    </div>
</main>