<style>
    .banner-image{
        height: 100px;
        width: 200px;
    }
</style>
<script src="/view-js/admin/banner-view.js" type="text/javascript"> </script>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {{title}}
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-body">
                        <div class="table-responsive">
                            <div class="row mx-0">
                                <div id="BannerGrid"></div>
                                <div id="BannerTemplate" style="display: none">
                                    <b>Banner</b>
                                    <form>
                                        <div class="form-group p-3 ml-auto mr-auto col-4 text-center">
                                                <img class="img-thumbnail" style='height: 120px;width:200px'
                                                    id='banner_image' src='\{{: Image }}' alt='\{{: Title }}'>
                                                <br>
                                                <div style="display: none;">
                                                    <input type="file" class="custom-file-input" id="file-select"
                                                        onchange="gertbanner_image()" lang="es">
                                                    <input id="bannerImage" name="bannerImage"
                                                        value="\{{: Image}}" class="form-control"
                                                        type="text" />
                                                </div>
                                            <span class="btn btn-primary mt-2"
                                                onclick="document.getElementById('file-select').click();"
                                                for="customFile">Upload <i class="fa fa-upload"></i></span>
                                        </div>
                                        <div class="form-group p-3">
                                            <label for="bannername">Title</label>
                                            <input id="bannerTitle" name="bannerTitle" value="\{{: Title}}"
                                                class="form-control" placeholder="Title" />
                                        </div>
                                        <div class="form-group p-3">
                                            <label for="bannerwidth">Url</label>
                                            <input type="text" id="bannerUrl" class="form-control" name="bannerUrl" value="\{{: Url}}" />
                                        </div>
                                        <div class="form-group p-3">
                                            <label for="bannerOrder">Order</label>
                                            <input type="number" class="form-control" id="bannerOrder" name="bannerOrder" value="\{{: Order}}"/>
                                        </div>
                                    </form>
                                    <table cellspacing="10">
                                        <tr style="display: none;">
                                            <td style="text-align: right;">id
                                            </td>
                                            <td style="text-align: left">
                                                <input id="bannerId" name="banner_id" value="\{{: _id}}"
                                                    disabled="disabled" class="e-field e-ejinputtext valid e-disable"
                                                    style="text-align: right; width: 116px; height: 28px" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div><!-- /.table-responsive -->
                        </><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
            </div><!-- /.row -->
    </section><!-- /.content -->
</div>