    <script>
        $('#loader').hide();
        function showSnackBar(text, alertType) {
            // Get the snackbar DIV
            var x = document.getElementById("snackbar");
            $('#snackbar').html(`<div class='rounded p-4 alert alert-${alertType}'>${text}</div>`);
            // Add the "show" class to DIV
            x.className = "show";

            // After 3 seconds, remove the show class from DIV
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        }

        $(document).ready(function () {
            {{#if message }}
            showSnackBar('{{message.text}}', '{{message.alertType}}');
            {{/if}}
        });

        function addToCart(id, qty, size = null, color = null) {
            $('#loader').show();
            $.ajax({
                type: "POST",
                url: '/api/cart/add-to-cart',
                data: {
                    product: id,
                    quantity: qty,
                    size: size,
                    color: color
                },
                success: function (response) {
                    $('#loader').hide();
                    showSnackBar(response.text, response.alertType);
                    populateCartDropDown();
                    
                },
            });
        }

        function removeFromCart(id) {
            $('#loader').show();
            $.ajax({
                type: "POST",
                url: '/api/cart/remove-item-from-cart',
                data: {
                    cart_item_id: id,
                },
                success: function (response) {
                    $('#loader').hide();
                    showSnackBar(response.text, response.alertType);
                    populateCartDropDown();
                },
            });
        }

        function populateCartDropDown() {
            $('#loader').show();
            $("#cart-dropdown").load("/api/cart/get-cart-for-this-user");
            $('#loader').hide();
        }
        populateCartDropDown();
    </script>
