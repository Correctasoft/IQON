<div class="modal fade" id="stockBuyModal" tabindex="-1" role="dialog" aria-labelledby="stockBuyModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="stockBuyModalLabel">Stock Item Buy</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/stock/buy" method="POST">
        <div class="modal-body">
            <div class="form-group">
              <label for="stock-item-id" class="col-form-label">Stock Item</label>
              <input type="date" id="stock-buy-date" class="form-control" name="date" disabled>
            </div>
            <div class="form-group">
              <label for="stock-item-id" class="col-form-label">Stock Item</label>
              <select class="form-control clsSelect2" style="width: 100%;" id="stock-item-buy-id" name="stock_item_id">
                {{!-- {{#each stock-itemList}} --}}
                  <option value=""> Product 1 </option>
                  <option value=""> Product 2 </option>
                  <option value=""> Product 3 </option>
                {{!-- {{/each}} --}}
              </select>
            </div>
            <div class="form-group">
              <label for="stock-buy-quantity" class="col-form-label">Quantity:</label>
              <input type="number" class="form-control" id="stock-buy-quantity" name="quantity" required>
            </div>
            <div class="form-group">
              <label for="stock-buy-reference" class="col-form-label">Reference:</label>
              <input type="text" class="form-control" id="stock-buy-reference" name="reference" required>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  //function is in base
  getTodayDate("stock-buy-date", false);
</script>